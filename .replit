modules = ["rust-stable"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "lua"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Project Validator"

[[workflows.workflow]]
name = "Project Validator"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lua validate.lua"

[workflows.workflow.metadata]
outputType = "console"
